@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Include your stylesheets here -->
    <style>
        /* Customize the styling of your photo collage */
        .photo-collage {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .photo {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <div class="container">
        <header class="text-center">
            <h1 class="display-4">Welcome to School Map</h1>
            <p>Explore schools in North Macedonia and their 500m zones.</p>
        </header>

        <!-- Photo Collage Section -->
        <section class="photo-collage">
            <!-- Add your photo URLs here -->
            <img class="photo" src="/images/ohrid.jpg" alt="Macedonia Photo 1" />
            <img class="photo" src="/images/skopje.jpeg" alt="Macedonia Photo 2" />
            <img class="photo" src="/images/macedonia.jpg" alt="Macedonia Photo 3" />
            <!-- Add more photos as needed -->
        </section>

        <section class="text-center">
            <a class="btn btn-primary" href="/Map">Go to Map</a>
        </section>

        <!-- Additional content or features can be added here -->
        <!-- Footer or additional information can go here -->
    </div>

</body>
</html>